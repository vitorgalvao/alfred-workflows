				<string>notificator() {
  notificator.app/Contents/Resources/Scripts/notificator -t "StrongPassword" -m "${1}"
}

charCount=$(echo "{query}" | tr -cd [:digit:])
if [[ -z "${charCount}" ]] || [[ "${charCount}" &gt; 63 ]]; then
  charCount="63"
fi

curl 'https://www.grc.com/passwords.htm' | grep 'ASCII characters:' | perl -MHTML::Entities -ne 's/.*2&gt;|&lt;.*//g; print decode_entities($_)' | cut -c1-${charCount} | tr -d '\n' | pbcopy

notificator "Password copied to the clipboard (${charCount} characters)"</string>
